{
  "presets": ["react"],
  "env": {
    "development": {
      "presets": [
        [
          "env",
          {"targets": {"browsers": ["last 2 versions"], "modules": false}}
        ],
        "stage-3",
        "linaria/babel"
      ]
    },
    "server": {
      "presets": [
        ["env", {"targets": {"node": 8}}],
        "stage-3",
        ["linaria/babel", {"extract": false}]
      ]
    },
    "production": {
      "presets": [
        [
          "env",
          {"targets": {"browsers": ["last 2 versions"], "modules": false}}
        ],
        "stage-3",
        [
          "linaria/babel",
          {"single": true, "filename": "styles.css", "outDir": "static"}
        ]
      ]
    }
  }
}
